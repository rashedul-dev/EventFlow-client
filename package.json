{
  "name": "eventflow",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint .",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run __tests__/unit",
    "test:integration": "vitest run __tests__/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "ANALYZE=true next build",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "check:deps": "node scripts/optimization/dependency-check.js",
    "check:css": "node scripts/optimization/remove-unused-css.js",
    "check:tree-shaking": "node scripts/optimization/tree-shaking-config.js",
    "optimize": "npm run check:deps && npm run check:css && npm run check:tree-shaking",
    "security:check": "node scripts/security/owasp-check.js && node scripts/security/check-headers.js http://localhost:3000",
    "security:headers": "node scripts/security/check-headers.js",
    "security:owasp": "node scripts/security/owasp-check.js",
    "lighthouse": "lhci autorun",
    "verify": "node scripts/verify-production.js",
    "perf:lighthouse": "echo 'Run Lighthouse audit in Chrome DevTools' && echo 'Or use: npx lighthouse http://localhost:3000'",
    "perf:report": "npm run analyze:bundle && npm run optimize"
  },
